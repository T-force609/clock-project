<show>
    orientation: 'vertical'


    BoxLayout:
        orientation: 'vertical'
        

        Label:

            id: time
            text: '[b]00[/b]:00:00'
            markup: True
            font_size: 60
            size_hint: (1, 0.25)
            font_color:'#000000'

        BoxLayout:
            orientation: 'horizontal'
            padding: 20
            spacing: 20
            size_hint:(1, 0.75)

            Button:
                text: 'reset'
                font_size: 25
                bold: True
                
                

            Button:
                text: 'start'
                font_size: 25
                bold: True


<robotoButton@Button>:
    background_normal: 'button_normal.png'
    background_down: 'button_down.png'
    border: (2,2,2,2)

    robotoButton:
        text : 'reset'
        background_normal: 'red_button_normal.png'
        background_down: 'red_button_down.png'
